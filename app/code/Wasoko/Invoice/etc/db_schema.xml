<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_invoice">
        <column xsi:type="tinyint" name="is_original_generated" unsigned="true" nullable="false" identity="false" default="0"
                comment="In original invoice generated?"/>
    </table>
    <table name="sales_invoice_grid">
        <column xsi:type="varchar" length="255" name="zra_invoice_number" comment="ZRA Invoice Number"/>
    </table>
</schema>
